			ga('send', 'pageview');
		//- SUMOME
		//- script(src="//load.sumome.com/",data-sumo-site-id="e11e4421aaa15d86d73e3e4aa153211ba045af6a7e759175a96d400b04e42276",async="async")
		block css
		block head
		block vars

	//- HTML BODY
	body
		#wrapper.flex.flex--column
			header
				.container-fluid
					.header-container(style=`${inner_padding || ''}`)
						.hidden-xs: nav.flex.flex--space-between.flex--wrap
							.header-div.no-highlight(style="padding: 5px 0"): a(href="/"): img(src="/images/logos/logociudatosmenu.png", alt="Ciudatos logo")
							each link in navLinks
								.header-div(class=(section === link.key ? 'link-active':'')): a(href=`${link.href}`)= link.label
							.header-div.no-highlight: a.aqua#open-overlay(href="#") Explora los datos abiertos
						.visible-xs: nav.flex.flex--space-between.flex--vertical-align.flex--wrap
							a(href="/"): img(src="/images/logos/logociudatosmenu.png", alt="Ciudatos logo")
							button.hamburger.hamburger--squeeze(type="button")
								span.hamburger-box: span.hamburger-inner
					.mobile-nav.flex.flex--column
						each link in navLinks
							a(href=`${link.href}`)= link.label
			main
				block intro
				+flash-messages(messages)
				.main-overlay
					.main-overlay-content.flex.flex--column
						.flex.flex--space-between(style="align-items: center")
							div
							button.close-overlay x
						.flex.flex--column.flex--vertical-align
							each profile in profiles
								.main-overlay-item.flex.flex--vertical-align.flex--wrap
									.item-icon
										span: img.img-responsive(src=`${profile.image ? profile.image.secure_url : ''}`, alt="", width="50%")
									.item-info.flex.flex--column
										h1.item-info-title= profile.name
										.item-info-description !{profile.description}
				block content
			footer
				.container-fluid: .footer-container(style=`${inner_padding || ''}`).flex.flex--space-between.flex--vertical-align
					.footer-info.text-color-white
						p Fundación Corona
						br
						p Calle 70 #7-30 Bogotá, Colombia
						p Tel: (57+1)400 00 31
						p Información
						p comunicaciones@fcorona.org
						p Línea Ética
						p seamoosintegrosfundacion@fcorona.org
					.footer-icons
						a.text-color-black(href="https://www.facebook.com/FundCorona/" target="_blank" rel="noopene noreferrer")
							span.fa-stack.fa-lg
								i.fa.fa-circle.fa-stack-2x.fa-inverse
								i.fa.fa-facebook.fa-stack-1x
						a.text-color-black(href="https://twitter.com/fundcorona" target="_blank" rel="noopener noreferrer")
							span.fa-stack.fa-lg
								i.fa.fa-circle.fa-stack-2x.fa-inverse
								i.fa.fa-twitter.fa-stack-1x
						a.text-color-black(href="https://www.linkedin.com/company/6411892/" target="_blank" rel="noopener noreferrer")
							span.fa-stack.fa-lg
								i.fa.fa-circle.fa-stack-2x.fa-inverse
								i.fa.fa-linkedin.fa-stack-1x
						a.text-color-black(href="https://www.youtube.com/user/fundacioncorona" target="_blank" rel="noopener noreferrer")
							span.fa-stack.fa-lg
								i.fa.fa-circle.fa-stack-2x.fa-inverse
								i.fa.fa-youtube-play.fa-stack-1x

		script(src='/js/jquery/jquery-1.11.3.min.js')
		script(src='/js/bootstrap/bootstrap-3.3.5.min.js')

		if user && user.canAccessKeystone
			script(src='/keystone/js/content/editor.js')
		script.
			$(".hamburger").click(function(){$(this).toggleClass("is-active"),$(".mobile-nav").toggleClass("opened")});
			$("#open-overlay").click(function(event) {
				event.preventDefault();
				resize()
				$('.main-overlay').toggleClass('shown');
			})
			$('.close-overlay').click(function() {
				$('.main-overlay').removeClass('shown');
			})
			function resize () {
				const header = $('header').height()
				$('.main-overlay').css('margin-top', header + 'px')
			}
			$(document).ready(function () {
				resize()
			})
		block js
