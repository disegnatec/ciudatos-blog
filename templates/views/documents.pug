extends ../layouts/default

mixin documentcard(document)
	.col-md-4.col-sm-6: .document-item
		img.img-responsive(src="/images/site/post.jpg", alt="")
		.document-info.text-size-large.text-color-white= document.title
		a.document-url.text-size-x-large.anchor.anchor-white(href=`${document.file.url}` target="_blank" rel="noopener noreferrer") PDF

block css
	style.
		.document-item {
			margin-bottom: 30px;
			box-shadow: 0px 2px 2px rgba(20,20,20,0.8);
		}
		.col-md-4.col-sm-6:nth-last-child(-n+1) .document-item {
			margin-bottom: 0;
		}
block content
	.container-fluid(style="padding-top: 15px;padding-bottom: 15px;")
		.row
			each document,i in data.documents
				+documentcard(document)

block js
	script(src="/js/margin.js")