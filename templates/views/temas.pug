extends ../layouts/default

block css
  link(rel="stylesheet", href="/components/owl-carousel/dist/assets/owl.carousel.min.css")
  link(rel="stylesheet", href="/components/owl-carousel/dist/assets/owl.theme.default.min.css")
  style.
    main {
      background: #f0f4f6 !important;
    }
    .owl-carousel {
      margin-top: 20px;
      position: relative;
    }
    .owl-nav {
      display: flex;
      justify-content: space-between;
      margin-top: 0 !important;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 100%;
    }
    .item {
      background: #e5d35b;
      height: 120px;
      font-family: 'Karla', sans-serif;
      margin: 0 auto;
      padding: 15px;
      position: relative;
      width: 120px;
    }
    .item .topic-name {
      color: #66816d;
      bottom: 15px;
      margin: 0;
      position: absolute;
    }
    .owl-prev,
    .owl-next {
      background: transparent !important;
    }
    i[class^="fa fa-chevron-"] {
      color: black;
    }
block content
  .container
    .owl-carousel.owl-theme
      .item
          span.fa.fa-bicycle
          p.topic-name Demografía
      .item
        span.fa.fa-bicycle
        p.topic-name Habitat
      .item
        span.fa.fa-bicycle
        p.topic-name Pobreza
      .item
        span.fa.fa-bicycle
        p.topic-name Salud
      .item
        span.fa.fa-bicycle
        p.topic-name Educación
      .item
        span.fa.fa-bicycle
        p.topic-name Convivencia
      .item
        span.fa.fa-bicycle
        p.topic-name Servicios públicos
      .item
        span.fa.fa-bicycle
        p.topic-name Espacio público
      .item
        span.fa.fa-bicycle
        p.topic-name Sostenibilidad
      .item
        span.fa.fa-bicycle
        p.topic-name Movilidad
  .custom-container
    img.img-responsive(src="/img/statscity.png", alt="Info")
block js
  script(src="/components/owl-carousel/dist/owl.carousel.min.js")
  script.
    $('.owl-carousel').owlCarousel({
      items: 2,
      loop: true,
      margin: 10,
      nav: true,
      dots: false,
      navText: ['<i class="fa fa-chevron-left"></i>','<i class="fa fa-chevron-right"></i>'],
      responsive: {
        768: { items: 5 },
        992: { items: 7 },
        1200: { items: 8 }
      }
    });
