extends ../layouts/default
block css
  style.
    main {
      background: #f0f4f6 !important;
      padding: 0;
    }
    .navbar-default {
      margin-bottom: 0 !important;
    }
    .carousel {
      height: 300px;
      position: relative;
      width: 100%;
    }
    .carousel .carousel-indicators {
      opacity: 0;
    }
    .carousel .carousel-inner {
      background: #171614;
      height: 100%;
      width: 100%;
    }
    .carousel .item {
      background: no-repeat center center;
      background-size: cover;
      height: 100%;
      position: relative;
      width: 100%;
    }
    .carousel .item span {
      color: #ffffff;
      font-family: 'Lato', sans-serif;
      font-weight: 400;
      font-size: 25px;
      left: 50%;
      position: absolute;
      top: 50%;
      transform: translate(-50%, -50%);
    }
    .city-profile img {
      margin: 0 auto;
    }
block content
  #cities-carousel.carousel.slide(data-ride="carousel")
    .carousel-inner(role="listbox")
      .item.active(style="background-image: url(/img/slider-city.jpg)" data-city="#bogota")
        span Bogotá
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#medellin")
        span Medellín
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#cali")
        span Cali
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#barranquilla")
        span Barranquilla
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#cartagena")
        span Cartagena
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#manizales")
        span Manizales
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#bucaramanga")
        span Bucaramanga
      .item(style="background-image: url(/img/slider-city.jpg)" data-city="#ibague")
        span Ibagué

    a.left.carousel-control(href="#cities-carousel" data-slide="prev" role="button")
      span.glyphicon.glyphicon-chevron-left
    a.right.carousel-control(href="#cities-carousel" data-slide="next" role="button")
      span.glyphicon.glyphicon-chevron-right
  
  .custom-container
    #bogota.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #medellin.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #cali.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #barranquilla.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #cartagena.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #manizales.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #bucaramanga.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")
    #ibague.city-profile
      img.img-responsive(src="/img/infocity.png", alt="Infografía")

block js
  script.
    $(document).ready(function() {
      var actual = $('.item.active').attr('data-city');
      $('.city-profile').hide();
      $(actual).show();
      $('.carousel').carousel({ interval: false })
      $('#cities-carousel').on('slid.bs.carousel', function(event) {
        var city = $(event.relatedTarget).attr('data-city');
        $('.city-profile').hide();
        $(city).fadeIn(700);
      })
    })